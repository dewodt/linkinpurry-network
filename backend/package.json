{
  "name": "backend",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --watch-delay 2000 src/main.ts",
    "start": "tsx src/main.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prepare": "cd .. && husky backend/.husky",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "hono": "^4.6.11",
    "inversify": "^6.1.4",
    "reflect-metadata": "^0.2.2",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "npm run lint:fix",
      "npm run format:fix"
    ]
  },
  "prisma": {
    "schema": "./src/infrastructures/database/schema.prisma"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.17.6",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "dotenv-cli": "^7.4.4",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-prisma": "^5.0.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
